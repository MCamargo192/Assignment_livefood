<!-- Hero Section-->
<header class="hero" id="userDashHero">
    <div class="container">
        <div class="hero-heading text-uppercase" id="dashHero">Hi, {{user.fname}} {{user.lname}}</div>
    </div>
</header>
<!-- Services-->
<section class="page-section" id="services">
    <div class="container">
        <div class="text-center">
            {{#if user.newUser}}
            <h2 class="section-heading text-uppercase">Welcome to LiveFood!</h2>
            <div class="dashboard-caption-subheading text-muted">We're so happy you joined our family, and wanted to
                take a moment to say hello.</div>
            <div class="dashboard-caption-subheading text-muted">Let's be fit together!</div>
            <div class="dashboard-caption-subheading text-muted">Have a great day!</div>
            <div class="dashboard-caption-subheading text-muted">Sincerely,</div>
            <h4 class="section-heading">LiveFood</h3>
            {{else}}
            <h2 class="section-heading text-uppercase">Welcome back to LiveFood!</h2>
            <div class="dashboard-caption-subheading text-muted">Check some of our meal packages, and let's be fit!</div>
            <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="/packages">view packages</a>
            {{/if}}
        </div>
    </div>
</section>