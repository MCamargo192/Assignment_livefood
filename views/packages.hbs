<!-- Hero Section-->
<header class="hero" id="packageHero">
    <div class="container">
        <div class="hero-heading text-uppercase" id="packHero">Our meal packages</div>
    </div>
</header>
<!-- Packages Section -->
<section class="page-section" id="package">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading">Pick a package, choose your package, achieve your goal - it's that easy!
            </h2>
        </div>
        <div class="row">
            {{#each data}}
            <div class="col-lg-3 col-sm-6 mb-4">
                <div class="package-item">
                    <a class="package-link" data-toggle="modal" href="#packageModal{{_id}}">
                        <div class="package-hover">
                            <div class="package-hover-content"><i class="fas fa-search-plus fa-2x"></i></div>
                        </div>
                        <img class="img-fluid" src="/img/{{src}}" alt="{{title}}" />
                    </a>
                    <div class="package-caption">
                        <div class="package-caption-heading">{{title}}</div>
                        <div class="package-caption-subheading text-muted">{{synopsis}}</div>
                        <div class="package-caption-subheading"><strong>${{price}}</strong></div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<!-- Package Modals-->
{{#each data}}
<div class="package-modal modal fade" id="packageModal{{_id}}" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal"><img src="/img/close-icon.svg" alt="Close modal" /></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="modal-body">
                            <!-- Package Details -->
                            <h2 class="text-uppercase">{{title}} Package</h2>
                            <img class="img-fluid d-block mx-auto" src="/img/{{src}}" alt="{{title}}" />
                            <p>{{description}}</p>
                            <p>Package comes with <strong>{{numberMeals}}</strong> meals.</p>
                            <h3 class="text-uppercase">${{price}}</h3>
                            <div class="cart-quantity-box">
                                <form id='cart' method='POST' action='/add-to-cart'>
                                    <div class="form-row justify-content-center">
                                        <div class="form-group mb-0">
                                            <div class="input-group mx-auto mb-0">
                                                <div class="number-input">
                                                    <input type="hidden" name="id" value="{{_id}}">
                                                    <input type="hidden" name="src" value="{{src}}">
                                                    <input type="hidden" name="title" value="{{title}}">
                                                    <input type="hidden" name="numberMeals" value="{{numberMeals}}">
                                                    <input type="hidden" name="price" value="{{price}}">
                                                    <button type="button"
                                                        onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
                                                        class="btn btn-primary updater"><i
                                                            class="fa fa-minus mr-1"></i></button>
                                                    <input class="quantity bg-light" id="cartQty" min="1"
                                                        placeholder="1" name="quantity" value="1" type="number">
                                                    <button type="button"
                                                        onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                                        class="btn btn-primary updater plus"><i
                                                            class="fa fa-plus mr-1"></i></button>
                                                    <button class="btn btn-primary" type="submit">
                                                        <i class="fa fa-shopping-cart mr-1"></i>
                                                        Add to cart
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                            <button class="btn btn-primary" data-dismiss="modal" type="button">
                                <i class="fas fa-times mr-1"></i>
                                Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}