<!-- Hero Section-->
<header class="hero" id="packageHero">
    <div class="container">
        <div class="hero-heading text-uppercase" id="packHero">Our meal packages</div>
    </div>
</header>
<!-- Packages Section -->
<section class="page-section" id="package">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading">Pick a package, choose your package, achieve your goal - it's that easy!
            </h2>
        </div>
        <div class="row">
            {{#each data}}
            <div class="col-lg-3 col-sm-6 mb-4">
                <div class="package-item">
                    <a class="package-link" data-toggle="modal" href="#packageModal{{id}}">
                        <div class="package-hover">
                            <div class="package-hover-content"><i class="fas fa-search-plus fa-2x"></i></div>
                        </div>
                        <img class="img-fluid" src="{{src}}" alt="{{title}}" />
                    </a>
                    <div class="package-caption">
                        <div class="package-caption-heading">{{title}}</div>
                        <div class="package-caption-subheading text-muted">{{description}}</div>
                        <div class="package-caption-subheading"><strong>${{price}}</strong></div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<!-- Package Modals-->
{{#each data}}
<div class="package-modal modal fade" id="packageModal{{id}}" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal"><img src="/img/close-icon.svg" alt="Close modal" /></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="modal-body">
                            <!-- Package Details -->
                            <h2 class="text-uppercase">{{title}} Package</h2>
                            <div id="carouselExampleControls_carouselmodal1" class="carousel slide"
                                data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="{{src}}" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="{{meals.first}}" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="{{meals.second}}" alt="Third slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="{{meals.third}}" alt="Fourth slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="{{meals.fourth}}" alt="Fifth slide">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls_carouselmodal1"
                                    role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls_carouselmodal1"
                                    role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <p>{{synopsis}}</p>
                            <p>Package comes with <strong>{{numberMeals}}</strong> meals.</p>
                            <h3 class="text-uppercase">${{price}}</h3>
                            <button class="btn btn-primary" data-dismiss="modal" type="button">
                                <i class="fas fa-times mr-1"></i>
                                Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}