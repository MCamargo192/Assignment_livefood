<!-- Hero Section-->
<header class="hero" id="clerkDashHero">
    <div class="container">
        <div class="hero-heading text-uppercase" id="dashHero">Hi, {{user.fname}} {{user.lname}}</div>
    </div>
</header>
<!-- Services-->
<section class="page-section" id="package">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Welcome to LiveFood!</h2>
        </div>
        <div class="row">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="border-0 bg-light">
                                <div class="p-2 px-3 text-uppercase">Package</div>
                            </th>
                            <th scope="col" class="border-0 bg-light">
                                <div class="py-2 text-uppercase">Number of Meals</div>
                            </th>
                            <th scope="col" class="border-0 bg-light">
                                <div class="py-2 text-uppercase">Price</div>
                            </th>
                            <th scope="col" class="border-0 bg-light">
                                <div class="py-2 text-uppercase">Top Meal</div>
                            </th>
                            <th scope="col" class="border-0 bg-light">
                                <div class="py-2 text-uppercase"></div>
                            </th>
                            <th scope="col" class="border-0 bg-light">
                                <div class="py-2 text-uppercase"></div>
                            </th>
                        </tr>
                    </thead>
                    {{#each data}}
                    <tbody>
                        <tr>
                            <th scope="row" class="border-0">
                                <div class="p-2">
                                    <img src="/img/{{src}}" alt="{{title}}" width="70"
                                        class="img-fluid rounded shadow-sm">
                                    <div class="ml-3 d-inline-block align-middle">
                                        <h5 class="mb-0 text-dark d-inline-block align-middle"><a class="text-muted"
                                                data-toggle="modal" href="#packageModal{{_id}}">{{title}}</a></h5>
                                    </div>
                                </div>
                            </th>
                            <td class="border-0 align-middle"><strong>{{numberMeals}}</strong></td>
                            <td class="border-0 align-middle"><strong>${{price}}</strong></td>
                            <td class="border-0 align-middle text-uppercase"><strong>{{isTopPackage}}</strong></td>
                            <td class="border-0 align-middle"><a href="/update-package/{{_id}}" class="text-dark"><i
                                        class="fas fa-edit"></i></a></td>
                            <td class="border-0 align-middle">
                                <form action="/remove-package/{{_id}}&{{src}}" method="post">
                                    <button class="btn text-dark"
                                        onclick='window.location.href="/remove-package/{{_id}}&{{src}}"' type="submit">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
                <div class="text-right"><span class="large text-muted">
                        <h6><a class="text-muted" href="/add-package"><strong>Add new
                                package</strong></a></span></h6>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Package Modals-->
{{#each data}}
<div class="package-modal modal fade" id="packageModal{{_id}}" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal"><img src="/img/close-icon.svg" alt="Close modal" /></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="modal-body">
                            <!-- Package Details -->
                            <h2 class="text-uppercase">{{title}} Package</h2>
                            <img class="img-fluid d-block mx-auto" src="/img/{{src}}" alt="{{title}}" />
                            <p>Image: <strong>/img/{{src}}</strong></p>
                            <p>Description: <strong>{{description}}</strong></p>
                            <p>Synopsis: <strong>{{synopsis}}</strong></p>
                            <p>Number of Meals: <strong>{{numberMeals}}</strong>.</p>
                            <p>Price: $<strong>{{price}}</strong></p>
                            <p>Is a top package: <strong>{{isTopPackage}}</strong>.</p>
                            <form action="/remove-package/{{_id}}&{{src}}" method="post">
                                <button class="btn btn-primary" onclick='window.location.href="/update-package/{{_id}}"'
                                    type="button">
                                    <i class="fas fa-edit mr-1"></i>
                                    Edit
                                </button>
                                <button class="btn btn-primary"
                                    onclick='window.location.href="/remove-package/{{_id}}&{{src}}"' type="submit">
                                    <i class="fas fa-trash mr-1"></i>
                                    Remove
                                </button>
                                <button class="btn btn-primary" data-dismiss="modal" type="button">
                                    <i class="fas fa-times mr-1"></i>
                                    Close
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}