<!-- Hero Section-->
<header class="hero">
    <div class="container">
        <div class="hero-heading text-uppercase">Meals and grocery delivered.</div>
        <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="/packages">view packages</a>
    </div>
</header>
<!-- Services-->
<section class="page-section bg-light" id="services">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">No cooking, just eating.</h2>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="services-options">
                    <img class="mx-auto rounded-circle" src="/img/pick.jpg" alt="Pick" />
                    <h4>Pick</h4>
                    <p class="text-muted">100+ menu of all-natural dishes.</p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="services-options">
                    <img class="mx-auto rounded-circle" src="/img/heat.jpg" alt="Delivery" />
                    <h4>Heat</h4>
                    <p class="text-muted">Cooked & delivered.</p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="services-options">
                    <img class="mx-auto rounded-circle" src="/img/eat.jpg" alt="Dish" />
                    <h4>Eat</h4>
                    <p class="text-muted">Delicious & nutritious.</p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="services-options">
                    <img class="mx-auto rounded-circle" src="/img/repeat.jpg" alt="" />
                    <h4>Repeat</h4>
                    <p class="text-muted">Skip a week or cancel any time.</p>
                </div>
            </div>
        </div>
    </div>
</section>
