<!-- Hero Section-->
<header class="hero" id="userCartHero">
    <div class="container">
        <div class="hero-heading text-uppercase" id="cartHero">My cart</div>
    </div>
</header>
<!-- Packages Section -->
<section class="page-section" id="package">
    <div class="px-4 px-lg-0">
        <div class="pb-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

                        <!-- Shopping cart table -->
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col" class="border-0 bg-light">
                                            <div class="p-2 px-3 text-uppercase">Package</div>
                                        </th>
                                        <th scope="col" class="border-0 bg-light">
                                            <div class="py-2 text-uppercase">Price</div>
                                        </th>
                                        <th scope="col" class="border-0 bg-light">
                                            <div class="py-2 text-uppercase">Quantity</div>
                                        </th>
                                        <th scope="col" class="border-0 bg-light">
                                            <div class="py-2 text-uppercase">Remove</div>
                                        </th>
                                    </tr>
                                </thead>
                                {{#each user.cart.items}}
                                <tbody>
                                    <tr>
                                        <th scope="row" class="border-0">
                                            <div class="p-2">
                                                <img src="/img/{{src}}" alt="{{title}}" width="70"
                                                    class="img-fluid rounded shadow-sm">
                                                <div class="ml-3 d-inline-block align-middle">
                                                    <h5 class="mb-0 text-dark d-inline-block align-middle">{{title}}
                                                    </h5><span
                                                        class="text-muted font-weight-normal font-italic d-block">Number
                                                        of Meals:
                                                        {{numberMeals}}</span>
                                                </div>
                                            </div>
                                        </th>
                                        <td class="border-0 align-middle"><strong>${{price}}</strong></td>
                                        <td class="border-0 align-middle"><strong>{{quantity}}</strong></td>
                                        <td class="border-0 align-middle"><a href="/remove-from-cart/{{id}}"
                                                class="text-dark"><i class="fa fa-trash"></i></a></td>
                                    </tr>
                                </tbody>
                                {{/each}}
                            </table>
                            <div class="text-right"><span class="small text-muted">
                                    <a class="text-muted" href="/packages"><strong>Continue shopping</strong></a></span>
                            </div>
                        </div>
                        <!-- End -->
                    </div>
                </div>

                <div class="row py-5 p-4 bg-white rounded shadow-sm">
                    <div class="col-lg-6">
                        <div class="bg-light px-4 py-3 text-uppercase font-weight-bold">Contact Information
                        </div>
                        <div class="p-4 contactInfo">
                            <p class="font-italic">{{user.fname}} {{user.lname}} ({{user.email}})<br><span
                                    class="small text-muted">
                                    <a class="text-muted" href="/logout"><strong>Logout</strong></a>
                            </p>
                        </div>
                        <div class="px-4 py-3 text-uppercase font-weight-bold shipping">Shipping address
                        </div>
                        <form id='shipping' method='POST' action='/checkout'>
                            <div class="form-label-group p-4 shipform">
                                <input type="text" id="address" name="address" class="form-control" required="required"
                                    placeholder="Address">
                                <input type="text" id="apartment" name="apartment" class="form-control"
                                    placeholder="Apartment, suite (optional)">
                                <div class="block">
                                    <input type="text" id="city" name="city" class="form-control cpcode"
                                        required="required" placeholder="City">
                                    <input type="text" id="province" name="province" class="form-control cpcode"
                                        required="required" placeholder="Province">
                                    <input type="text" id="postalcode" name="postalcode" class="form-control cpcode"
                                        required="required" placeholder="Code: A#A #A#"
                                        pattern="^([A-Za-z]\d[A-Za-z][ ]?\d[A-Za-z]\d)">
                                </div>
                            </div>
                            <div class="p-4 shipform contactInfo">
                                <p class="font-italic mb-4">If you have some information for the seller you can leave
                                    them in the box below</p>
                                <textarea name="instructions" cols="30" rows="2" class="form-control"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-6">
                        <div class="bg-light px-4 py-3 text-uppercase font-weight-bold">Order summary
                        </div>
                        <div class="p-4">
                            <p class="font-italic mb-4">Shipping and additional costs are calculated based on values
                                you have entered.</p>
                            <ul class="list-unstyled mb-4">
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong
                                        class="text-muted">Order Subtotal
                                    </strong><strong>${{user.cart.subtotal}}</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong
                                        class="text-muted">Shipping and
                                        handling</strong><strong>${{user.cart.shipping}}</strong>
                                </li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong
                                        class="text-muted">Tax</strong><strong>${{user.cart.tax}}</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong
                                        class="text-muted">Total</strong>
                                    <h5 class="font-weight-bold">${{user.cart.total}}</h5>
                                </li>
                            </ul><button type="submit" form="shipping"
                                class="btn btn-primary py-2 btn-block">Proceed to
                                checkout</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>